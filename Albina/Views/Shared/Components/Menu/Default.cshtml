@model IEnumerable<DepartmentViewModel>
<nav class="categories">
    <ul class="clearfix">
        <li>
            <span>
                <a href="#">
                    <span class="hamburger hamburger--spin">
                        <span class="hamburger-box">
                            <span class="hamburger-inner"></span>
                        </span>
                    </span>
                    Məhsullar
                </a>
            </span>
            <div id="menu">
                <ul>
                    @foreach (var department in Model)
                    {
                        <li>
                            <span><a href="#0">@department.Name</a></span>
                            <ul>
                                @foreach (var category in department.Categories)
                                {
                                    <li><a asp-controller="categories" asp-action="index" asp-route-id="@category.Id">@category.Name</a></li>
                                }
                            </ul>
                        </li>
                    }
                </ul>
            </div>
        </li>
    </ul>
</nav>